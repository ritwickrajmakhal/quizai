{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "question"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "qid": {
      "type": "uid",
      "required": true
    },
    "questions": {
      "type": "json",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "MCQ",
        "SAQ",
        "LAQ"
      ],
      "required": false,
      "default": "MCQ"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "Easy",
        "Medium",
        "Hard"
      ],
      "required": false,
      "default": "Easy"
    },
    "attempts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::attempt.attempt",
      "mappedBy": "question"
    }
  }
}
